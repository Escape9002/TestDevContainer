{
  "name": "Java Spring Boot Guestbook",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "Pivotal.vscode-spring-boot",
        "SonarSource.sonarlint-vscode",
        "asciidoctor.asciidoctor-vscode",
        "madhavd1.javadoc-tools",
        "redhat.vscode-xml"
      ],
      "settings": {
        "java.compile.nullAnalysis.mode": "automatic"
      }
    }
  },

  "forwardPorts": [
    8080
  ],

  // Since we can clone on windows and will run under linux, we have to fix the flags on the scripts we want to run.
  // Then download the dependencies, run a first install and the tests for the application.
  "postCreateCommand": "sudo chown -R vscode:vscode . && dos2unix ./mvnw && chmod +x ./mvnw dependency:resolve && ./mvnw install test",

  // after the container started and all dependencies are resolved, lets start directly into the development server
  "postStartCommand": "dos2unix ./mvnw && ./mvnw spring-boot:run",
  
  "remoteUser": "vscode"
}